@page
@model MascotaFeliz.App.Frontend.Pages.ListaVisitasPyPModel
@{
}

<h1>Listado de VisitasPyP</h1>
<table class="table">
    <tr>
        
        <th>Fecha</th>
        <th>Nombre de la Mascota</th>
        <th>Veterinario</th>
    </tr>
    @foreach (var visitaPyP in Model.listaVisitasPyP)
    {
        <tr>
            
            
            <td>@visitaPyP.FechaVisita</td>
            <td>@visitaPyP.Historia</td>
            <td>@visitaPyP.Veterinario.Nombres @visitaPyP.Veterinario.Apellidos</td>
        
            <td>
                <a class="btn btn-primary table-btn" asp-page="./DetallesVisitasPyP" asp-route-visitaPyPId="@visitaPyP.Id">
                    Detalle VisitaPyP
                </a>
            </td>
            <!-- <td>
                <a class="btn btn-primary table-btn" asp-page="./EditarVisitasPyP" asp-route-visitaPyPId="@visitaPyP.Id">
                    Editar VisitaPyP
                </a>
            </td> -->

        </tr>
    }
</table>
<a class = "btn btn-primary table-btn" asp-page="./AgregarVisitasPyP" class="btn-default">Adicionar VisitaPyP</a>